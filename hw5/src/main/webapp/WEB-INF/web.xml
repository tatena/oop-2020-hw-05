<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app
        xmlns="java.sun.com/xml/ns/javaee"
        xmlns:xsi="w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="java.sun.com/xml/ns/javaee java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">

  <display-name>Simple Web app</display-name>

  <servlet>
    <servlet-name>LogInServlet</servlet-name>
    <servlet-class>webApp.LogInController</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>LogInServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SignUpServlet</servlet-name>
    <servlet-class>webApp.SignUpController</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>SignUpServlet</servlet-name>
    <url-pattern>/Register</url-pattern>
  </servlet-mapping>

</web-app>
